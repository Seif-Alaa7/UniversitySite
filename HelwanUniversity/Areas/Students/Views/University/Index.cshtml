@{
    Layout = null;
}
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Helwan Univeristy - Home Page</title>
    <link rel="icon" href="@ViewBag.LogoTitle" type="image/png">

    <!-- Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400;1,700&family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />
    <link rel="stylesheet" href="css/styles.css">

    <!-- Styles -->
    <style>
        .header.loaded {
            background: url('@Model.MainPicture') no-repeat center center;
        }
        .masthead {
            padding: 3rem 0 7rem;
            background-color: #dd3d31;
            background-image: url('@Model.MainPicture'), linear-gradient(45deg, #dd3d31 0%, #d22f23 100%);
            background-size: cover;
            background-position: center;
            width: 100%;
            box-sizing: border-box;
            position: sticky;
            z-index: 1500;
        }
    </style>
</head>
<body>

    <!-- Loader(2s) -->
<div class="loader-container">
    <svg class="pl" viewBox="0 0 200 200" width="200" height="200" xmlns="http://www.w3.org/2000/svg">
        <defs>
            <linearGradient id="pl-grad1" x1="1" y1="0.5" x2="0" y2="0.5">
                <stop offset="0%" stop-color="hsl(313,90%,55%)" />
                <stop offset="100%" stop-color="hsl(223,90%,55%)" />
            </linearGradient>
            <linearGradient id="pl-grad2" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stop-color="hsl(313,90%,55%)" />
                <stop offset="100%" stop-color="hsl(223,90%,55%)" />
            </linearGradient>
        </defs>
        <circle class="pl__ring" cx="100" cy="100" r="82" fill="none" stroke="url(#pl-grad1)" stroke-width="36" stroke-dasharray="0 257 1 257" stroke-dashoffset="0.01" stroke-linecap="round" transform="rotate(-90,100,100)" />
        <line class="pl__ball" stroke="url(#pl-grad2)" x1="100" y1="18" x2="100.01" y2="182" stroke-width="36" stroke-dasharray="1 165" stroke-linecap="round" />
    </svg>
</div>

    <!-- Header -->
    <header class="masthead">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Students" asp-controller="University" asp-action="Index">
                    <img class="Hulogo" src="@Model.Logo" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link NavItems" style="color: white;" asp-area="Students" asp-controller="University" asp-action="Index">
                                <img style="margin-bottom: 4px;" alt="svgImg" src="data:image/svg+xml;base64," />
                                Home
                            </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" asp-area="Students" asp-controller="Faculty" asp-action="Index">
                                <img style="margin-bottom: 4px;" width="25" height="25" src="https://img.icons8.com/external-fauzidea-detailed-outline-fauzidea/64/FFFFFF/external-college-building-fauzidea-detailed-outline-fauzidea-2.png" alt="external-college-building-fauzidea-detailed-outline-fauzidea-2" />
                                Facilities
                            </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" asp-area="Students" asp-controller="UniFile" asp-action="News">
                                <img style="margin-bottom: 4px;" width="25" height="25" src="https://img.icons8.com/glyph-neue/64/FFFFFF/news.png" alt="news" />
                                News
                                </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" href="@ViewBag.Mail">
                                <img width="23" height="23" src="https://img.icons8.com/ios/25/FFFFFF/email.png" alt="email" />
                                Contact Us
                            </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" asp-area="Students" asp-controller="Student" asp-action="Details" asp-route-id="@ViewBag.Student.Id">
                                <img width="20" height="20" src="https://img.icons8.com/pastel-glyph/64/FFFFFF/student-male--v1.png" alt="student--v1" />
                                Student Portal
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <div class="theme-switcher">
                            <i class="fas fa-sun" id="theme-toggle" title="Toggle Theme"></i>
                        </div>
                        <li class="nav-item dropdown" style="margin-bottom:30px">
                            <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img style="margin-bottom: 10px;" width="55" height="55" src="https://img.icons8.com/3d-fluency/94/user-male-circle.png" alt="user-male-circle" />
                            </a>

                            <!-- Account Icon -->
                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                    <div class="dropdown-item text-center">
                                        <img class="img-thumbnail rounded-circle"
                                             width="100"
                                             height="100"
                                             src="@ViewBag.Student.Picture"
                                             alt="student-icon" />
                                    </div>
                                    <p class="mt-2 mb-0 text-center">@ViewBag.Student.Name</p>
                                    <p class="text-muted text-center" style="margin-top: 2px;">Student</p>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item d-flex align-items-center" style="color: black; text-decoration: none" href="/Identity/Account/Manage">
                                        <img width="20" height="20" src="https://img.icons8.com/pastel-glyph/64/1A1A1A/user-male-circle.png" alt="add-user-male" />
                                        <span style="margin-left: 2px;">Account</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger d-flex align-items-center" style="color: black;text-decoration: none" href="/Identity/Account/Logout">
                                        <img width="20" height="20" src="https://img.icons8.com/ios/50/logout-rounded--v1.png" alt="logout-rounded--v1" />
                                        <span style="margin-left: 10px;">Logout</span>
                                    </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 py-5">
                    <h1 class="mb-4 arabic-text fw-bold" style="padding: 50px 80px 0 0;">Helwan University</h1>
                    <div class="WelcomeMessage">Helwan University aims to be a leading educational and research institution in technology and the arts and distinguished in education and sciences according to global quality standards.</div>
                </div>
                <div class="col-lg-5">
                    <div class="py-5 px-4 masthead-cards">
                        <div class="d-flex">
                            <a href="/Students/University/Details" class="w-50 pr-3 pb-4">
                                <div class="card border-0 border-bottom-red shadow-lg shadow-hover">
                                    <div class="card-body text-center">
                                        <div class="text-center">
                                            <i class="fa fa-info-circle fa-4x my-2"></i>
                                        </div>
                                        <div class="CardText">About University</div>
                                    </div>
                                </div>
                            </a>
                            <a href="/Students/University/DisplayMap" class="w-50 pl-3 pb-4">
                                <div class="card border-0 border-bottom-blue shadow-lg shadow-hover">
                                    <div class="card-body text-center">
                                        <div class="text-center">
                                            <i class="fas fa-map-marked-alt	 fa-4x my-2"></i>
                                        </div>
                                        <div class="CardText">Campus Map</div>
                                    </div>
                                </div>
                            </a>
                        <div class="shape"></div>
                    </div>
                </div>
            </div>
        </div>
        <svg style="pointer-events: none" class="wave" width="100%" height="50px" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1920 75">
            <defs>
                <style>
                    .a {
                        fill: none;
                    }

                    .b {
                        clip-path: url(#a);
                    }

                    .c,
                    .d {
                        fill: #f9f9fc;
                    }

                    .d {
                        opacity: 0.5;
                        isolation: isolate;
                    }
                </style>
                <clipPath id="a">
                    <rect class="a" width="1920" height="75"></rect>
                </clipPath>
            </defs>
            <title>wave</title>
            <g class="b">
                <path class="c" d="M1963,327H-105V65A2647.49,2647.49,0,0,1,431,19c217.7,3.5,239.6,30.8,470,36,297.3,6.7,367.5-36.2,642-28a2511.41,2511.41,0,0,1,420,48"></path>
            </g>
            <g class="b">
                <path class="d" d="M-127,404H1963V44c-140.1-28-343.3-46.7-566,22-75.5,23.3-118.5,45.9-162,64-48.6,20.2-404.7,128-784,0C355.2,97.7,341.6,78.3,235,50,86.6,10.6-41.8,6.9-127,10"></path>
            </g>
            <g class="b">
                <path class="d" d="M1979,462-155,446V106C251.8,20.2,576.6,15.9,805,30c167.4,10.3,322.3,32.9,680,56,207,13.4,378,20.3,494,24"></path>
            </g>
            <g class="b">
                <path class="d" d="M1998,484H-243V100c445.8,26.8,794.2-4.1,1035-39,141-20.4,231.1-40.1,378-45,349.6-11.6,636.7,73.8,828,150"></path>
            </g>
        </svg>
   </header>

    <!-- Body -->
   <main>
        <!-- Gallieries -->
        <div class="container mt-100">
            <div class="row">
                <div class="col-md-8 mr-auto ml-auto">
                    <h3 class="arabic-text">Photo Gallery</h3>
                    <br />
                    <br />
                    <br />
                    <div class="card card-raised card-carousel">
                        <div id="carouselindicators" class="carousel slide" data-ride="carousel" data-interval="3000">
                            <ol class="carousel-indicators">
                                @for (int i = 3; i < ViewBag.Images.Count; i++)
                                {
                                    <li data-target="#carouselindicators" data-slide-to="@i" class="@(i == 3 ? "active" : "")"></li>
                                }
                            </ol>
                            <div class="carousel-inner">
                                @for (int i = 3; i < ViewBag.Images.Count; i++)
                                {
                                    <div class="carousel-item @(i == 3 ? "active" : "")">
                                        <img class="d-block w-100" src="@ViewBag.Images[i].File" alt="Slide @i">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselindicators" role="button" data-slide="prev" data-abc="true">
                                <i class="fa fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselindicators" role="button" data-slide="next" data-abc="true">
                                <i class="fa fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Space & Divider -->
        <div style="margin-top: 200px;"></div>
        <hr class="Divider">

        <!-- Statistics -->
        <div class="sectiontitle" style="margin-top: 200px;">
            <h3 class="arabic-text">Helwan University by the Numbers</h3>
            <span class="headerLine"></span>
        </div>
        <div id="projectFacts" class="sectionClass">
            <div class="fullWidth eight columns">
                <div class="projectFactsWrap ">
                    <div class="item wow fadeInUpBig animated animated" style="visibility: visible;">
                        <div class="eye-icon">
                            <i class="fa fa-eye"></i>
                        </div>
                        <p id="number1" class="number">@Model.ViewCount</p>
                        <span></span>
                        <p>Visitors</p>
                    </div>
                    <div class="item wow fadeInUpBig animated animated" style="visibility: visible;">
                        <div class="student-icon">
                            <i class="fa fa-user-graduate"></i>
                        </div>
                        <p id="number2" class="number">@ViewBag.StudentCounts</p>
                        <span></span>
                        <p>Students</p>
                    </div>
                    <div class="item wow fadeInUpBig animated animated" style="visibility: visible;">
                        <div class="professor-icon">
                            <i class="fa fa-chalkboard-teacher"></i>
                        </div>
                        <p id="number3" class="number">@ViewBag.DoctorCounts</p>
                        <span></span>
                        <p>University Doctors</p>
                    </div>
                    <div class="item wow fadeInUpBig animated animated" style="visibility: visible;">
                        <div class="college-icon">
                            <i class="fa fa-university"></i>
                        </div>
                        <p id="number4" class="number">@ViewBag.FacultyCounts</p>
                        <span></span>
                        <p>Facilities</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Divider -->
        <hr class="Divider">

        <!-- HighBoard -->
        <div class="container py-5" style="margin-top: 100px;">
            <div class="row text-center text-white">
                <div class="col-lg-8 mx-auto">
                    <h3 class="arabic-text">Highboards</h3>
                    <span class="headerLine"></span>
                </div>
            </div>
        </div>
        <div class="container" >
            <div class="row text-center">
                <div class="col-xl-3 col-sm-6 mb-5">
                    <div class="bg-white rounded shadow-sm py-5 px-4 icon-zoom card-shadow">
                        <img src="@ViewBag.VPAcademicAffairs.Picture" alt="VPAcademicAffairs" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                        <h5 class="mb-0">@ViewBag.VPAcademicAffairs.Name</h5><span class="small text-uppercase text-muted">VB Academic Affairs</span>
                    </div>
                </div>
                @foreach (var Vice in ViewBag.VicePresidents)
                {
                    <div class="col-xl-3 col-sm-6 mb-5">
                        <div class="bg-white rounded shadow-sm py-5 px-4 icon-zoom card-shadow ">
                            <img src="@Vice.Picture" alt="VicePresidents" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                            <h5 class="mb-0">@Vice.Name</h5><span class="small text-uppercase text-muted">Vice President</span>
                        </div>
                    </div>
                }
                <div class="col-xl-3 col-sm-6 mb-5">
                    <div class="bg-white rounded shadow-sm py-5 px-4 icon-zoom card-shadow">
                        <img src="@ViewBag.President.Picture" alt="President" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                        <h5 class="mb-0">@ViewBag.President.Name</h5><span class="small text-uppercase text-muted">President</span>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="js/site.js"></script>
</body>
</html>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <p>&copy; 2024 Helwan University. All rights reserved.</p>
            <ul class="footer-links">
                <li><a href="/Students/University/Details">About Us</a></li>
                <li><a href="@ViewBag.Mail">Contact Us</a></li>
            </ul>
            <br />

            <!-- Social Media -->
            <div class="social-icons">
                <a href="@Model.FacebookPage" class="social-icon"><i> <img width="22" height="22" src="https://img.icons8.com/ios-filled/50/FFFFFF/facebook-new.png" alt="facebook-new" /></i></a>
                <a href="@Model.MainPage" class="social-icon"><i> <img width="20" height="20" src="https://img.icons8.com/ios-filled/50/FFFFFF/home-page.png" alt="home-page"/></i></a>
                <a href="@Model.LinkedInPage" class="social-icon"><i>
                        <img width="22" height="22" src="https://img.icons8.com/ios-filled/50/FFFFFF/linkedin.png" alt="linkedin" />
                </i></a>
            </div>
            <br />

            <!-- Map -->
            <div class="map-container GoogleMaps">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3459.843511157207!2d31.322631324604874!3d29.86878657501254!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145836f34a58de69%3A0x49853855f032462a!2z2KzYp9mF2LnYqSDYrdmE2YjYp9mG!5e0!3m2!1sar!2seg!4v1722292547467!5m2!1sar!2seg"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        allowfullscreen="" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
            </div>
        </div>
    </div>
</footer>




