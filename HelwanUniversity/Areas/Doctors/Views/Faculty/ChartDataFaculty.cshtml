@using Models.Enums;
@{
    ViewData["Title"] = "Chart Data";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <link rel="stylesheet" href="/css/ChartDataFaculty.css">
    <title>Chart Data</title>
</head>
<body>
    <div class="controls-container">
    <div class="rate-toggle">
        <label>
            <input type="radio" name="rateType" value="passRate" checked>
            Pass Rate
        </label>
        <label>
            <input type="radio" name="rateType" value="failRate">
            Fail Rate
        </label>
    </div>

    <div class="filter-options">
        <label for="departmentSelector">Department:</label>
        <select id="departmentSelector">
            <option value="All">All Departments</option>
        </select>

        <label for="topNInput">N Subjects:</label>
        <input type="number" id="topNInput" min="1" value="5" style="width: 50px;" />

        <label for="topOrBottomSelect">Order:</label>
        <select id="topOrBottomSelect">
            <option value="top">Top</option>
            <option value="bottom">Bottom</option>
        </select>
    </div>
</div>

    <div class="maincontainer">
        <div class="chartBox1" onclick="toggleFullWidth(this)">
            <canvas id="avgGpaChart"></canvas>
        </div>
        <div class="chartBox2" onclick="toggleFullWidth(this)">
            <canvas id="rateChart"></canvas>
        </div>
    </div>

    <script>
        function toggleFullWidth(el) {
            el.classList.toggle('full-width');
        }
    </script>

    <script>
        window.FacultyId = @ViewBag.facultyId;
    </script>
    <script src="/js/ChartDataFaculty.js"></script>
</body>
</html>
