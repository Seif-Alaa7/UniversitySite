@model Doctor
@{
    ViewData["Title"] = "Personal Data";
}

<!-- StyleSheet -->
<link rel="stylesheet" href="/css/Doctor.css">

<div class="container py-5">
    <h2 class="text-center mb-5 font-weight-bold">Personal Data</h2>
    <div class="card shadow-lg rounded-lg personal-data-card">
        <div class="row no-gutters">
            @if (!string.IsNullOrEmpty(Model.Picture))
            {
                <div class="col-lg-4">
                    <img src="@Model.Picture" class="card-img" alt="@Model.Name">
                </div>
            }
            <div class="@(string.IsNullOrEmpty(Model.Picture) ? "col-lg-12" : "col-lg-8")">
                <div class="card-body">
                    <h3 class="card-title mb-4">@Model.Name</h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p class="card-text">
                                <i class="fas fa-venus-mars icon-text"></i>
                                <strong>Gender:</strong> @Model.Gender
                            </p>
                            <p class="card-text">
                                <i class="fas fa-pray icon-text"></i>
                                <strong>Religion:</strong> @Model.Religion
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt icon-text"></i>
                                <strong>Address:</strong> @(string.IsNullOrEmpty(Model.Address) ? "N/A" : Model.Address)
                            </p>
                            <p class="card-text">
                                <i class="fas fa-user-md icon-text"></i>
                                <strong>Job Title:</strong>
                                <span class="badge badge-info">@Model.JobTitle</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
