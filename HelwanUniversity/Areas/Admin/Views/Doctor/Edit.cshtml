@using Models.Enums
@model ViewModels.DoctorVM
@{
    ViewData["Title"] = "Edit Doctor";
}

<!-- StyleSheet -->
<link rel="stylesheet" href="/css/EditPerson.css">

<h2>Edit</h2>

<!-- Form -->
<form asp-action="SaveEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="JobTitle" class="form-label">Job Title</label>
        <select asp-for="JobTitle" class="form-select">
            <option value="@JobTitle.Prof_Doctor">Professor Doctor</option>
            <option value="@JobTitle.Doctor">Doctor</option>
        </select>
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Gender" class="form-label">Gender</label>
            <select asp-for="Gender" class="form-select">
                <option value="@Gender.Male">Male</option>
                <option value="@Gender.Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Religion" class="form-label">Religion</label>
            <select asp-for="Religion" class="form-select">
                <option value="@Religion.Muslim">Muslim</option>
                <option value="@Religion.Christian">Christian</option>
                <option value="@Religion.Other">Other</option>
            </select>
            <span asp-validation-for="Religion" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3" style="margin-top: 40px">
        <label class="form-label">Current Picture:</label>
        <div id="currentPicturePreview">
            <img src="@Model.Picture" alt="Current Image" class="img-fluid" />
        </div>
    </div>
    <div class="form-group mb-4" style="margin-top: 70px;">
        <input asp-for="FormFile" type="file" class="form-control-file" id="pictureInput" style="display:none;" />
        <div id="picturePreview" class="mt-2"></div>
        <label for="pictureInput" class="custom-file-upload">
            <i class="fa fa-upload"></i> Upload Profile Picture
        </label>
        <span asp-validation-for="FormFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<!-- Script -->
<script src="/js/File.js"></script>
