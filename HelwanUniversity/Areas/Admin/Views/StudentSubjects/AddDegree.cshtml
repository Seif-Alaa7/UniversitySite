@model ViewModels.StudentSubjectsVM

@{
    ViewData["Title"] = "Add Degree";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/AddDegree.css">
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <hr />

        <!-- Form -->
        <form asp-action="SaveAdd" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group">
                <input type="hidden" asp-for="StudentId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="SubjectId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Degree" class="control-label"></label>
                <input asp-for="Degree" class="form-control" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>
            <center>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </center>
        </form>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

