@model Models.DepartmentSubjects

@{
    ViewData["Title"] = "Add Subject";
}

<div class="container mt-5" style="padding-bottom: 190px">
    <div class="text-center">
        <h1 class="display-4">Add Subject</h1>
        <p class="lead">Fill the form below to add a new subject to the department.</p>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">

                <!-- Form -->
                <form asp-action="SaveAdd" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="DepartmentId" class="form-control" value="@ViewBag.DepartId" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectId" class="control-label">Subject</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-book"></i></span>
                            </div>
                            <select asp-for="SubjectId" class="form-control" asp-items="@ViewBag.Subjects">
                                <option disabled selected>Select</option>
                            </select>
                        </div>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle"></i> Add To Department
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Script -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
