@model ViewModels.UniFileVMs.UniFileVM2

@{
    ViewData["Title"] = "Update Image";
}


<!-- Stylesheet -->
<link rel="stylesheet" href="/css/File.css">

<h1>Update Image</h1>

<h4>Edit Form</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">

                    <!-- Form -->
                    <form asp-action="SaveUpdate" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <input type="hidden" asp-for="ContentType" class="form-control" />

                        <div class="form-group mb-4">
                            <label style="font-size: 20px" class="control-label">Current Picture:</label>
                            <div id="currentPicturePreview">
                                <img src="@Model.File" alt="Current Image" class="img-fluid" style="max-width: 100%; height: auto;" />
                            </div>
                        </div>

                        <hr style="border: 1px solid #000; width: 100%;" />

                        <div class="form-group mb-4">
                            <label style="font-size: 20px" asp-for="ImgPath" class="control-label">Upload New Picture:</label>
                            <input asp-for="ImgPath" type="file" class="form-control-file d-none" id="pictureInput" />
                            <div id="picturePreview" class="mt-2"></div>
                            <label for="pictureInput" class="custom-file-upload">
                                <i class="fa fa-upload"></i> Upload Picture
                            </label>
                            <span asp-validation-for="ImgPath" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/js/File.js"></script>
}
