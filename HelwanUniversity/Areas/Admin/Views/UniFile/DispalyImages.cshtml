@model IEnumerable<Models.UniFile>
@{
    ViewData["Title"] = "Display Images";
}


<!-- Stylesheet -->
<link rel="stylesheet" href="/css/File.css">

<a asp-action="AddImage">
    <img width="80" height="80" src="https://img.icons8.com/dotty/80/1A1A1A/add.png" alt="add" />
</a>

<h1>Details of Images</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th></th>
            <th style="font-size: 20px;">@Html.DisplayName("Img Role")</th>
            <th style="font-size: 20px;">@Html.DisplayName("Image")</th>
            <th style="font-size: 20px;">@Html.DisplayName("Delete")</th>
            <th style="font-size: 20px;">@Html.DisplayName("Edit")</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var fileUrl = Model.ToList()[i].File;
            var id = Model.ToList()[i].Id;

            <tr>
                <td>@Html.DisplayName($"{i + 1}")</td>
                @if (i == 0)
                {
                    <td>Title Logo (png)</td>
                    <td><img src="@fileUrl" width="100" height="100" alt="Title Logo" class="img-thumbnail" data-toggle="modal" data-target="#imageModal" data-image-url="@fileUrl" /></td>
                }
                else if (i == 1)
                {
                    <td>Internal Map</td>
                    <td><img src="@fileUrl" width="100" height="100" alt="Internal Map" class="img-thumbnail" data-toggle="modal" data-target="#imageModal" data-image-url="@fileUrl" /></td>
                }
                else if (i == 2)
                {
                    <td>Update</td>
                    <td><img src="@fileUrl" width="100" height="100" alt="Update" class="img-thumbnail" data-toggle="modal" data-target="#imageModal" data-image-url="@fileUrl" /></td>
                }
                else if (i == 3)
                {
                    <td>SignIn Img & Slide</td>
                    <td><img src="@fileUrl" width="100" height="100" alt="SignIn Img" class="img-thumbnail" data-toggle="modal" data-target="#imageModal" data-image-url="@fileUrl" /></td>
                }
                else if (i == 4)
                {
                    <td>Forgot Password & Slide</td>
                    <td><img src="@fileUrl" width="100" height="100" alt="Forgot Password" class="img-thumbnail" data-toggle="modal" data-target="#imageModal" data-image-url="@fileUrl" /></td>
                }
                else
                {
                    <td>Slide</td>
                    <td><img src="@fileUrl" width="100" height="100" alt="Slide" class="img-thumbnail" data-toggle="modal" data-target="#imageModal" data-image-url="@fileUrl" /></td>
                }

                <td>
                    @if (i > 4)
                    {
                        <form asp-action="Delete" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@id" />
                            <button type="submit" style="background: none; border: none; padding: 0; cursor: pointer;" onclick="return confirm('Are you sure you want to delete this Picture?');">
                                <img src="https://img.icons8.com/dotty/80/1A1A1A/delete-forever.png" width="45" height="45" alt="function" />
                            </button>
                        </form>
                    }
                </td>
                <td>
                    <a asp-action="UpdateImage" asp-route-id="@id">
                        <img src="https://img.icons8.com/ios/50/1A1A1A/available-updates.png" width="45" height="45" alt="function" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Image Preview" />
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/File.js"></script>




