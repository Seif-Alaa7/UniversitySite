@model ViewModels.UniFileVMs.UniFileVM
@using Models.Enums
@{
    var ImgType = Filetype.IMG;
    ViewData["Title"] = "Add Image";
}

<div class="relative min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 bg-gray-500 bg-no-repeat bg-cover relative items-center"
     style="background-image: url('https://www.kuchatea.com/blog/wp-content/uploads/2022/08/AdobeStock_191041863-scaled.jpeg');">
    <div class="absolute bg-black opacity-60 inset-0 z-0"></div>
    <div class="sm:max-w-lg w-full p-10 bg-white rounded-xl z-10">
        <div class="text-center">
            <h2 class="mt-5 text-3xl font-bold text-gray-900">
                Add Image
            </h2>
            <p class="mt-2 text-sm text-gray-400">Upload your image using the form below.</p>
        </div>

        <!-- Form -->
        <form id="uploadForm" class="mt-8 space-y-3" asp-action="SaveImg" method="post" enctype="multipart/form-data">
            <div class="grid grid-cols-1 space-y-2">
                <label class="text-sm font-bold text-gray-500 tracking-wide">Image Upload</label>
                <div class="flex items-center justify-center w-full">
                    <label id="dropZone" class="flex flex-col rounded-lg border-4 border-dashed w-full h-60 p-10 group text-center">
                        <div class="relative w-full h-full flex items-center justify-center overflow-hidden">
                            <img id="imagePreview" class="absolute inset-0 object-cover w-full h-full hidden" src="#" alt="Upload Preview">
                            <div class="flex flex-auto max-h-48 w-2/5 mx-auto -mt-10">
                                <img class="h-36 object-center" src="https://img.freepik.com/free-vector/image-upload-concept-landing-page_52683-27130.jpg?size=338&ext=jpg" alt="Upload Preview">
                            </div>
                            <p class="pointer-none text-gray-500"><span class="text-sm">Drag and drop</span> files here <br /> or <a href="#" id="pictureInputLabel" class="text-blue-600 hover:underline">select a file</a> from your computer</p>
                        </div>
                        <input asp-for="ImgPath" type="file" class="hidden" id="pictureInput" />
                    </label>
                    <span asp-validation-for="ImgPath" class="text-red-500 text-sm"></span>
                </div>
            </div>
            <div class="grid grid-cols-1 space-y-2">
                <input type="hidden" asp-for="ContentType" class="form-control" />
            </div>
            <div>
                <button type="submit" class="my-5 w-full flex justify-center bg-blue-500 text-gray-100 p-4 rounded-full tracking-wide
                        font-semibold focus:outline-none focus:shadow-outline hover:bg-blue-600 shadow-lg cursor-pointer transition ease-in duration-300">
                    Upload
                </button>
                <center>
                    <button type="button" onclick="cancelForm()" class="btn btn-secondary">
                        Cancel
                    </button>
                </center>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="/js/Image.js"></script>

    }
}



